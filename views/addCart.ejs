<%- include ("./partials/_header") %>

<main role="main" class="container my-5">

      <form action="/addCart/<%= cartProduct._id %>" method="POST">
        <h2 class="blog-post-title">Are you sure ypu want to add this item to your cart?</h2>
        <div class="form-group">
          <input type="text" class="form-control" name="name" placeholder="Name" value="<%= cartProduct.name %>" required readonly>
        </div>
        <div class="form-group">
          <input type="number" name="price" class="form-control" placeholder="Price" min="0" value="<%= cartProduct.price %>" required readonly>
        </div>
        <div class="form-group">
          <input type="text" name="brand" class="form-control" placeholder="Brand"  value="<%= cartProduct.brand %>" readonly>
        </div>
        <a class = "btn btn-outline-dark" href ="/"> Back </a>
        <button type="submit" class="btn btn-primary">Add to cart</button>
      </form>

</main>


<%- include ("./partials/_footer") %>
