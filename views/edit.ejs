<%- include ("./partials/_header") %>

<main role="main" class="container my-5">
        <h2 class="blog-post-title">Edit product</h2>
        <form action="/edit/<%= product._id %>" method="POST">
          <div class="form-group">
            <input type="text" class="form-control" name="name" placeholder="Name" value="<%= product.name %>" required>
          </div>
          <div class="form-group">
            <input type="number" name="price" class="form-control" placeholder="Price" min="0"  value="<%= product.price %>" required>
          </div>
          <div class="form-group">
            <input type="text" name="brand" class="form-control" placeholder="Brand"  value="<%= product.brand %>">
          </div>
          <a class = "btn btn-outline-dark" href ="/"> Back </a>
          <button type="submit" class="btn btn-primary">Update</button>
        </form>

  </main>

<%- include ("./partials/_footer") %>
